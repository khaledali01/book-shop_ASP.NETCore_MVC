@model IEnumerable<Books.Domain.Entities.Author>
@{
    ViewData["Title"] = "Index";
    #pragma warning disable 
}

 <div class="container p-3">
    <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Authors</h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Author" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> &nbsp; New</a>
            </div>  
    </div>
    <br>
    <table class="table table-striped table-hover w-100" >
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FullName)
                </th> 
                <th scope="col">                           
                     № of books
                </th> 
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => author.Id)
                    </td>
                    <td width="30%">
                        @Html.ActionLink(author.FullName, "Details", "Author", new { id = author.Id }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(model => author.Products.Count)
                    </td>
                    <td colspan="2" class="text-end">
                        <a  asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i>&nbsp; </a> 
                        <a class="btn btn-danger mx-2" asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id"
                        > <i class="bi bi-trash-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

