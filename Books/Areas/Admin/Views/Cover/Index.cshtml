 @model IEnumerable<Books.Domain.Entities.Cover>
@{
    ViewData["Title"] = "Index";
    #pragma warning disable 
}

 <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Covers</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Cover" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; New</a>
        </div>
    </div>
    <br>
    <table class="table table-striped table-hover w-100" >
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cover in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => cover.Name)
                    </td>
                    <td colspan="2" class="text-end">
                        <a class="btn btn-info mx-2"asp-controller="Cover" asp-action="Edit" asp-route-id="@cover.Id"
                        > <i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger mx-2"asp-controller="Cover" asp-action="Delete" asp-route-id="@cover.Id"
                        > <i class="bi bi-trash-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

